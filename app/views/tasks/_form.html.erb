 <%= form_with model: @task do |f| %>
    <%= f.label :title, class: 'form-label my-1' %>
    <%= f.text_field :title, class: 'form-control mb-3' %>
    <%= f.label :details, class: 'form-label my-1' %>
    <%= f.text_field :details, class: 'form-control mb-3' %>
    <div class="form-check my-3">
      <%= f.check_box :completed, class: 'form-check-input' %>
      <%= f.label :mark_as_completed, class: 'form-check-label' %>
    </div>
    <div>
      <%= f.submit class: 'btn btn-primary mt-3 p-2' %>
    </div>
  <% end %>
