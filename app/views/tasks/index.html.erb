<div class="container">
<div class="row justify-content-center">
  <div class="col-8">
    <h1 class="my-3">My Tasks</h1>
    <%= link_to "Add a new Task", new_task_path, class: "btn btn-success mb-3"  %>
    <ul class="list-group">
      <% @tasks.each do |task| %>
        <li class="list-group-item">
          <span>
          <% if task.completed %>
            <i class="fa-regular fa-square-check"></i>
          <% else %>
            <i class="fa-regular fa-square"></i>
          <% end %>
          </span>
          <%= "#{task.title}, #{task.details}" %>
          <div class="container py-2">
            <%= link_to "details", task_path(task), class: "btn btn-outline-info"  %>
            <%= link_to "edit", edit_task_path(task), class: "btn btn-outline-warning"  %>
            <%=
                link_to 'delete',
                task_path(task),
                class: "btn btn-outline-danger",
                data: {turbo_method: :delete, turbo_confirm: 'Are you sure'}
            %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  </div>
</div>
